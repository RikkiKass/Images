@using Images.Web.Models
@model ViewImageViewModel
<div class="container">
    <main role="main" class="pb-3">
        @if (Model.CanProceed)
        {<div class="row">
                <div class="col-md-8 offset-md-2">
                    <img src="/Uploads/@Model.Image.ImagePath" style="width: 800px;" />
                    <br />
                    <h3>Views: @Model.Image.NumberOfViews</h3>
                </div>
            </div>


        }
        else
        {
            if (!String.IsNullOrEmpty(Model.Message))
            {
                <h3 class="alert-danger">Invalid password</h3>
            }
            <div class="row">
                <div class="col-md-6 offset-md-3 jumbotron">
                    <h4>Please enter the password for this image:</h4>
                    <form method="get" action="/home/verifypassword">
                        <input type="hidden" name="imageId" value="@Model.Image.Id" />
                        <input type="hidden" value="@Model.Image.Password" id="password-real" name="passwordReal" />
                        <input type="text" id="password-try" name="passwordTry" />
                        <br />
                        <button class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>

        }





    </main>
</div>